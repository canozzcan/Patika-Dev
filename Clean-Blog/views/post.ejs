<%- include('shared/header') %>

<body>

  <!-- Navigation -->
  <%- include('shared/navigation') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>Post Detail Page</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h1><%= post.title %></h1>
            <h5 class="subheading"><%= post.detail %></h5>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on <%= post.dateCreated %></span>
              <a href="/posts/edit/<%= post._id %>" class="btn btn-primary" id="sendMessageButton">Update</a>
              <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger" id="sendMessageButton"
                
                onclick="return confirm('ARE YOU SURE')">Delete</a>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('shared/footer') %>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
